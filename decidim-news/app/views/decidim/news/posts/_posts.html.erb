<div class="row small-up-1 medium-up-3 card-grid">
  <% posts.each do |post| %>
    <div class="column">
      <article class="card card--blog">

        <div class="card__content">
          <div class="card__header">
            <%= link_to post, class: "card__link" do %>
              <h5 class="card__title">
                <%= translated_attribute post.title %>
              </h5>
            <% end %>
            <div class="card__author">

            </div>

          </div>


          <%= decidim_sanitize  post_description(post) %>


        </div>
        <div class="card__footer">
          <div class="card__support">
            <div class="card__support__data">
              <span><%= l post.created_at, format: "%d/%m/%Y" %></span>
            </div>
            <div class="">
                <span><%= link_to t("read_more", scope: "decidim.news.posts"), post, class: "card__button button small" %></span>
            </div>
          </div>
        </div>
      </article>
    </div>
  <% end %>
</div>
<%= decidim_paginate posts %>
