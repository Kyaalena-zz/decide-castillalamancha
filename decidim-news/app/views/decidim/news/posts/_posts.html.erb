<div class="row small-up-1 medium-up-3 card-grid">
  <% posts.each do |post| %>
    <div class="column">
      <article class="card card--blog">

        <div class="card__content">
          <div class="card__header">
            <%= link_to post, class: "card__link" do %>
              <h5 class="card__title">
                <%= translated_attribute post.title %>
              </h5>
            <% end %>
            <div class="card__author">

            </div>

          </div>


          <%= decidim_sanitize  post_description(post) %>


        </div>
        <div class="card__footer card__footer--transparent">
          <ul class="card-data card-data--blog">
            <li class="card-data__item card-data__item--blog"></li>
            <li class="card-data__item card-data__item--blog">
              <%= l post.created_at, format: "%d/%m/%Y" %>
            </li>
          </ul>
          <!-- <%= render partial: "datetime", locals: { post: post } %> -->
        </div>
      </article>
    </div>
  <% end %>
</div>
<%= decidim_paginate posts %>
