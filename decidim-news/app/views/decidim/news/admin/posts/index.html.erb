<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t "decidim.news.titles.news" %> <%= link_to t("new.create", scope: "decidim.news"), new_post_path, class: 'button tiny button--title new' %></h2>
  </div>
  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <tr>
            <th><%= t("posts.fields.title", scope: "decidim.news") %></th>
            <th><%= t("posts.fields.created_at", scope: "decidim.news") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to translated_attribute(post.title), ['edit', post] %><br />
              </td>
              <td>
                <%= l post.created_at, format: :short %>
              </td>
              <td class="table-list__actions">
                <% if can? :update, post %>
                  <%= icon_link_to "pencil", ['edit', post], t("actions.edit", scope: "decidim.admin"), class: "action-icon--edit" %>
                <% end %>

                <%= icon_link_to "eye", decidim_news.post_path(post), t("actions.view", scope: "decidim.news.posts"), class: "action-icon--preview" %>

                <% if can? :destroy, post %>
                  <%= icon_link_to "circle-x", post, t("actions.destroy", scope: "decidim.news.posts"), class: "action-icon--remove", method: :delete, data: { confirm: t("actions.confirm_destroy", scope: "decidim.admin") } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
